<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <preConditions onFail="HALT" onFailMessage="Must be running PostgreSQL >=12">
        <and>
            <dbms type="postgresql"/>

            <sqlCheck expectedResult="t">
                SELECT current_setting('server_version_num')::integer >= 12000;
            </sqlCheck>
        </and>
    </preConditions>

    <!-- Nested migrations -->

    <include file="./migrations/v1_0_0_initial/changelog.xml" relativeToChangelogFile="true"/>

</databaseChangeLog>
